{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Effect": "Deny",
      "Principal": "*",
      "Action": "s3:*",
      "Resource": [
        "arn:aws:s3:::aws-upc-pfg-infra-tfstate-bucket-{account_name}",
        "arn:aws:s3:::aws-upc-pfg-infra-tfstate-bucket-{account_name}/*"
      ],
      "Condition": {
        "Bool": {
          "aws:SecureTransport": "false"
        }
      }
    }
  ]
}